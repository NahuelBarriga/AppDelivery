<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRoot"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCliente"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="Cliente" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:text="Estado" />


    <!-- Parte que se expande -->
    <LinearLayout
        android:id="@+id/layoutExpandible"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/tvDireccion"
            android:text="DirecciÃ³n del cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTotal"
            android:text="Detalles del pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botones de cambio de estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnEntregado"
                android:text="Entregado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnCancelado"
                android:text="Entrega cancelada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
