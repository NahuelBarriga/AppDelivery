<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/tvId" android:textSize="16sp"
        android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvCliente" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Cliente" />

    <TextView android:id="@+id/tvEstado" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Estado" />
</LinearLayout>
